<div class="container">
  
<h1>Здесь можно найти проекты и вакансии</h1>
<h2>Проект находится в разработке </h2>
  <strong> i am a user - <%= if user_signed_in?
                               if current_user.role == "customer"
                                         link_to current_user.email, customer_path
                                       elsif current_user.role == "executor"
                                         link_to current_user.email, executor_path
                                         else
                                         link_to current_user.email, profiles_path
                                         end
                             end
  %>.</strong>
     <strong>
       <%= if user_signed_in?
             "#{current_user.role} #{current_user.id}"
        end %>

     </strong>
  <%= button_to(
        "Log Out",
        destroy_user_session_path,
        method: :delete
      ) %>
<div>
  <div>
  <a href="/projects"><h2>Проекты</h2></a>
  <a href="/projects/new" class="btn btn-primary my-2"> Создать </a>
  </div>
  <div>
  <% @projects.each do |project| %>
      <% if project.project_status != "draft" %>
        <div class = "project nav">
          <%= link_to project.short_title, project %>
          <div> <%= project.title %> </div>
          <div> <%= project.project_status %> </div>
          <div> <p> <%= project.author %> </p> </div>
            </div>
      <% end %>

  <% end %>
  </div>
</div>
<hr>
<div>
  <div>
  <a href="/vacancies"><h2>Вакансии</h2></a>
  <a href="/vacancies/new" class="btn btn-primary my-2"> Создать </a>
 </div>
  <% @vacancies.each do |vacancy| %>
    <div>
      <a href="/vacancy/<%= vacancy.id %>">
         <%= link_to vacancy.short_name, vacancy %>
         <div> <%= vacancy.body %> </div>
         <div> <p> <%= vacancy.user.email %> </p> </div>
      </a>
    </div>
  <% end %>
</div>

<hr>
<div>
  <div>
    <a href="notes"><h2>Заметки </h2></a>
    <a href="notes/new" class="btn btn-primary my-2"> Создать </a>
 </div>
  <% @notes.each do |note| %>
    <div>
      <a href="/notes/<%= note.id %>">
         <%= link_to note.title, note %>
         <div> <%= note.body %> </div>
      </a>
    </div>
  <% end %>
</div>
<hr>

  <h2>Записи </h2>
<ul>
  <% @articles.each do |article| %>
    <li>
      <a href="/articles/<%= article.id %>">
         <%= link_to article.title, article %>
         <div> <%= article.body %> </div>
      </a>
    </li>
  <% end %>
</ul>

<div class="row row-cols-1 row-cols-md-3 g-4">
 <% @articles.each do |article| %>  
  <div class="col">
    <div class="card-project">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"> <%= article.title %> </h5>
        <p class="card-text"> <%= article.body %> This content is a little bit longer.</p>
      </div>
    </div>
 </div>
 <% end %>

  <hr>
  <div>
    <div>
      <a href="/tags"><h2>Теги</h2></a>
      <a href="/tags/new" class="btn btn-primary my-2"> Создать </a>
    </div>
    <% @tags.each do |tag| %>
      <div>
        <a href="/tag/<%= tag.id %>">
          <%= link_to tag.title, tag %>
          <div> <%= tag.title %> </div>
          <div> <p> <%= %> </p> </div>
        </a>
      </div>
    <% end %>
  </div>
<hr>
<ul>
  <% @users.each do |user|%>     
    <li>
   <strong> <%= user.email %> - <%= user.role %>  </strong>
    </li> 
  <% end %>
</ul>
<hr>
